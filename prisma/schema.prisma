generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  projects Project[] @relation("ProjectToUser")
}

model Project {
  id          String    @id @default(uuid())
  title       String    @unique
  challengeId String    @unique
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  team        User[]    @relation("ProjectToUser")
}

model Challenge {
  id           String   @id @default(uuid())
  title        String   @unique
  dueAt        DateTime
  description  String
  requirements String
  winner       Project?
}
