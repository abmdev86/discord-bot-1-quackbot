generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  projects UsersOnProjects[]
}

model ProjectTeam {
  id          String    @id @default(uuid())
  projectName String    @unique
  challengeId String    @unique
  challenge   Challenge?
  members     UsersOnProjects[]
  winner      Boolean   @default(false)
  isSubmitted Boolean   @default(false)
}

model UsersOnProjects {
  user        User      @relation(fields: [userId], references: [id])
  userId      String    
  project     ProjectTeam   @relation(fields: [projectId], references: [id])
  projectId   String

  createdAt   DateTime  @default(now())

  @@id([userId, projectId])
}

model Challenge {
  id              String        @id @default(uuid())
  title           String        @unique
  dueAt           DateTime
  minTeam         Int           @default(2)
  maxTeam         Int           @default(4)
  description     String
  requirements    String
  projectTeam     ProjectTeam   @relation(fields: [projectId], references: [id])
  projectId       String        @unique
}

